datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  bookings  Booking[]
  otpTokens OtpToken[]   // <-- RelaciÃ³n inversa con OtpToken
}

model Experience {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  location    String
  price       Float
  date        DateTime
  createdAt   DateTime  @default(now())
  bookings    Booking[]
}

model Booking {
  id            Int       @id @default(autoincrement())
  userId        Int
  experienceId  Int
  createdAt     DateTime  @default(now())

  user        User       @relation(fields: [userId], references: [id])
  experience  Experience @relation(fields: [experienceId], references: [id])
}


model OtpToken {
  id        Int      @id @default(autoincrement())
  otp       String
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

